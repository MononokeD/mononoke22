<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <h4 class="mb-0 text-primary fw-semibold">
            ðŸ“– <%= @book.title %>
          </h4>
          <%= link_to "â† Back", books_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>

        <div class="card-body">
          <h5 class="mb-4 text-secondary fw-semibold">Book Details</h5>

          <dl class="row mb-0">
            <dt class="col-sm-3 text-secondary">Title:</dt>
            <dd class="col-sm-9 fw-medium"><%= @book.title %></dd>

            <dt class="col-sm-3 text-secondary">Author:</dt>
            <dd class="col-sm-9">
              <% if @book.author %>
                <%= link_to @book.author.name, author_path(@book.author), class: "text-decoration-none text-primary fw-semibold" %>
                <% unless @book.author.active %>
                  <span class="badge bg-warning text-dark ms-2">Inactive Author</span>
                <% end %>
              <% else %>
                <span class="text-muted">Unknown</span>
              <% end %>
            </dd>

            <dt class="col-sm-3 text-secondary">Year:</dt>
            <dd class="col-sm-9"><%= @book.year %></dd>

            <dt class="col-sm-3 text-secondary">Description:</dt>
            <dd class="col-sm-9"><%= @book.description.presence || content_tag(:span, "No description", class: "text-muted") %></dd>
          </dl>

          <hr class="my-4">

          <div class="d-flex justify-content-end">
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-outline-warning me-2" %>
            <%= button_to "Delete", book_path(@book), 
                          method: :delete, 
                          data: { turbo_confirm: "Are you sure?" }, 
                          class: "btn btn-outline-danger me-2" %>
            <%= link_to "Back to Books", books_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
