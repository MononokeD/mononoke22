<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-light d-flex align-items-center justify-content-between">
          <h4 class="mb-0 text-primary fw-semibold">
            <%= book.new_record? ? "➕ New Book" : "✏️ Edit Book" %>
          </h4>
          <%= link_to "← Back", books_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>

        <div class="card-body">
          <%= form_with(model: book, local: true) do |form| %>

            <% if book.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>⚠️ Error:</strong> <%= pluralize(book.errors.count, "error") %> prevented saving this book.
                <ul class="mt-2 mb-0">
                  <% book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, class: "form-label fw-semibold" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter book title" %>
            </div>

            <div class="mb-3">
              <%= form.label :author_id, "Author", class: "form-label fw-semibold" %>
              <%= form.collection_select :author_id, 
                                         @active_authors, 
                                         :id, 
                                         :name, 
                                         { prompt: "Select an author (optional)" }, 
                                         { class: "form-select" } %>
              <div class="form-text">Only active authors are shown.</div>
            </div>

            <div class="mb-3">
              <%= form.label :year, class: "form-label fw-semibold" %>
              <%= form.number_field :year, class: "form-control", min: 1900, max: 2030, placeholder: "Enter publication year" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label fw-semibold" %>
              <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "Enter book description" %>
            </div>

            <div class="d-flex justify-content-end mt-4">
              <%= link_to "Cancel", books_path, class: "btn btn-outline-secondary me-2" %>
              <%= form.submit (book.new_record? ? "Create Book" : "Update Book"), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
