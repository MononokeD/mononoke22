<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1>âž• Add New Book</h1>

    <div class="card">
      <div class="card-body">
        <%= form_with model: @book, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :title, "Title", class: "form-label" %>
            <%= f.text_field :title, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :author_id, "Author", class: "form-label" %>
            <%= f.collection_select :author_id, @active_authors, :id, :name, { prompt: "Select author" }, class: "form-select", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :year, "Publication Year", class: "form-label" %>
            <%= f.number_field :year, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :description, "Description", class: "form-label" %>
            <%= f.text_area :description, class: "form-control" %>
          </div>

          <%= f.submit "Create Book", class: "btn btn-primary" %>
          <%= link_to "Cancel", books_path, class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>