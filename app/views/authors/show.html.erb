<div class="container py-4">
  <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold mb-0 text-primary">
      ðŸ‘¤ <%= @author.name %>
      <% if @author.active %>
        <span class="badge bg-success ms-2">Active</span>
      <% else %>
        <span class="badge bg-warning text-dark ms-2">Inactive</span>
      <% end %>
    </h1>
    <%= link_to "â† Back to Authors", authors_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="row">
    <!-- Ð†Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ñ–Ñ Ð¿Ñ€Ð¾ Ð°Ð²Ñ‚Ð¾Ñ€Ð° -->
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
          <h5 class="mb-0 text-secondary fw-semibold">Author Information</h5>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8"><%= @author.name %></dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">
              <% if @author.active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-warning text-dark">Inactive</span>
              <% end %>
            </dd>

            <dt class="col-sm-4">Biography:</dt>
            <dd class="col-sm-8"><%= @author.bio
                .presence || "No biography available" %></dd>

            <dt class="col-sm-4">Total Books:</dt>
            <dd class="col-sm-8">
              <span class="badge bg-info text-dark">
                <%= pluralize(@author
                    .books_count, "book") %>
              </span>
            </dd>
          </dl>
        </div>
        <div class="card-footer bg-light">
          <%= link_to "Back to Authors", authors_path, class: "btn btn-outline-secondary w-100" %>
        </div>
      </div>
    </div>

    <!-- ÐšÐ½Ð¸Ð³Ð¸ Ð°Ð²Ñ‚Ð¾Ñ€Ð° -->
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
          <h5 class="mb-0 text-secondary fw-semibold">
            Books by <%= @author
                .name %>
          </h5>
        </div>
        <div class="card-body">
          <% if @books
                .any? %>
            <div class="table-responsive">
              <table class="table table-striped align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Title</th>
                    <th>Year</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @books
                      .each do |book| %>
                    <tr>
                      <td><%= link_to book.title, book_path(book), class: "text-decoration-none fw-semibold text-primary" %></td>
                      <td><%= book.year %></td>
                      <td class="text-end">
                        <%= link_to "View", book_path(book), class: "btn btn-sm btn-outline-info me-1" %>
                        <%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-outline-warning" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info mb-0 text-center shadow-sm">
              <p class="mb-0">ðŸ“š This author has no books yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
