<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary mb-0">ğŸ‘©â€ğŸ’¼ Authors</h1>
    <%= link_to "â† Back to Books", books_path, class: "btn btn-outline-secondary" %>
  </div>

  <!-- ĞŸĞ°Ğ½ĞµĞ»ÑŒ Ñ„Ñ–Ğ»ÑŒÑ‚Ñ€Ñ–Ğ² -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light">
      <h5 class="mb-0 text-secondary fw-semibold">Filter by Status</h5>
    </div>
    <div class="card-body">
      <div class="btn-group w-100" role="group">
        <%= link_to "All Authors", authors_path,
            class: "btn #{params[:active].blank? ? 'btn-primary' : 'btn-outline-primary'}" %>
        <%= link_to "Active Only", authors_path(active: true),
            class: "btn #{params[:active] == 'true' ? 'btn-success' : 'btn-outline-success'}" %>
        <%= link_to "Inactive Only", authors_path(active: false),
            class: "btn #{params[:active] == 'false' ? 'btn-warning' : 'btn-outline-warning'}" %>
      </div>
    </div>
  </div>

  <!-- Ğ¡Ğ¿Ğ¸ÑĞ¾Ğº Ğ°Ğ²Ñ‚Ğ¾Ñ€Ñ–Ğ² -->
  <% if @authors
        .present? %>
    <div class="row">
      <% @authors
          .each do |author| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
              <h5 class="card-title mb-0">
                <%= link_to author.name, author_path(author),
                    class: "text-decoration-none text-dark fw-semibold" %>
              </h5>
              <% if author.active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-warning text-dark">Inactive</span>
              <% end %>
            </div>

            <div class="card-body">
              <p class="card-text text-muted">
                <%= truncate(author.bio, length: 150, omission: "â€¦") %>
              </p>
              <div class="mt-3">
                <span class="badge bg-info text-dark">
                  <%= pluralize(author.books_count, "book") %>
                </span>
              </div>
            </div>

            <div class="card-footer bg-light text-end">
              <%= link_to "View Details", author_path(author),
                  class: "btn btn-sm btn-outline-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center shadow-sm">
      <p class="mb-0">ğŸ“˜ No authors found.</p>
    </div>
  <% end %>
</div>
